<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/_bg_menu"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".ui.menu.togetherTests.MenuTestsActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/goMenuActivity"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/ic_menu" />

            <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/comfortaa_medium"
                    android:paddingBottom="8dp"
                    android:text="Тесты разработаны психологом"
                    android:textAlignment="center"
                    android:textColor="@color/purpul"
                    android:textSize="16sp" />
        </LinearLayout>


        <TextView
                android:id="@+id/testOneButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="16dp"
                android:background="@color/opasity_white15"
                android:fontFamily="@font/comfortaa_medium"
                android:padding="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Тест№1 \nСовместимость темпераментов, любви, браке, взаимоотношений в семье"
                android:textColor="@android:color/white"
                android:textSize="17sp" />

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/dark_blu"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

            <LinearLayout
                    android:id="@+id/llSessionActive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tvSessionInfoTest1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/comfortaa_medium"
                        android:padding="16dp"
                        android:text="Текущий прогресс Теста №1 : -"
                        android:textColor="@color/purpul" />

                <TextView
                        android:id="@+id/tvSessionDeleteTest1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/comfortaa_medium"
                        android:padding="16dp"
                        android:text="Сбросить прогресс Теста №1"
                        android:textColor="@color/purpul" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/tvSessionResultTest1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/comfortaa_medium"
                            android:padding="16dp"
                            android:text="Результаты Теста №1"
                            android:textColor="@color/purpul" />

                    <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/comfortaa_medium"
                            android:gravity="end"
                            android:padding="16dp"
                            android:textColor="@color/purpul"
                            android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
                android:id="@+id/testTwoButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/opasity_white15"
                android:fontFamily="@font/comfortaa_medium"
                android:padding="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Тест№2 \nСовместимость в характерах, привычках, интересах, отношении к жизни и социуму"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:visibility="visible" />


        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/dark_blu"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

            <LinearLayout
                    android:id="@+id/llSessionActiveTest2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tvSessionInfoTest2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/comfortaa_medium"
                        android:padding="16dp"
                        android:text="Текущий прогресс: -"
                        android:textColor="@color/purpul" />

                <TextView
                        android:id="@+id/tvSessionDeleteTest2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/comfortaa_medium"
                        android:padding="16dp"
                        android:text="Сбросить прогресс"
                        android:textColor="@color/purpul" />

                <TextView
                        android:id="@+id/tvSessionResultTest2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/comfortaa_medium"
                        android:padding="16dp"
                        android:text="Результаты Теста №2"
                        android:textColor="@color/purpul" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <TextView
                android:id="@+id/testThreeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/opasity_white15"
                android:fontFamily="@font/comfortaa_medium"
                android:padding="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Тест№3 \nСовместимость взглядов в саморазвитии, отношении к здоровью и финансовой сфере жизни"
                android:textColor="@android:color/white"
                android:textSize="17sp" />


        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="46dp"
                app:cardBackgroundColor="@color/dark_blu"
                app:cardCornerRadius="16dp"

                app:cardElevation="8dp">

            <LinearLayout
                    android:id="@+id/llSessionActiveTest3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tvSessionInfoTest3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/comfortaa_medium"
                        android:padding="16dp"
                        android:text="Текущий прогресс: -"
                        android:textColor="@color/purpul" />

                <TextView
                        android:id="@+id/tvSessionDeleteTest3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/comfortaa_medium"
                        android:padding="16dp"
                        android:text="Сбросить прогресс"
                        android:textColor="@color/purpul" />

                <TextView
                        android:id="@+id/tvSessionResultTest3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/comfortaa_medium"
                        android:padding="16dp"
                        android:text="Результаты Теста №3"
                        android:textColor="@color/purpul" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
