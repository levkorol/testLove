<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/_bg_menu"
        android:orientation="vertical"
        tools:context=".ui.menu.connect.SuccessConnectActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/sgoMenuActivity"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/ic_menu" />

        <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/comfortaa_medium"
                android:paddingBottom="8dp"
                android:text="Соеденение с партнером"
                android:textAlignment="center"
                android:textColor="@color/purpul"
                android:textSize="16sp" />
    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="75dp"
            android:fontFamily="@font/yeseva_one_regular"
            android:text="Вы соединены!"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/name_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:fontFamily="@font/yeseva_one_regular"
                android:gravity="center"
                android:text="Имя"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        <TextView
                android:id="@+id/name_user2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:fontFamily="@font/yeseva_one_regular"
                android:gravity="center"
                android:text="Имя"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
    </LinearLayout>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/hearts" />

    <Button
            android:id="@+id/buttonGoTests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="75dp"
            android:layout_marginBottom="22dp"
            android:background="@drawable/btn_next"
            android:fontFamily="@font/yeseva_one_regular"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="К тестам!"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="19sp" />
</LinearLayout>