<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/_bg_menu"
        android:orientation="vertical"
        tools:context=".ui.menu.singleTests.SingleTestsActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/tgoMenuActivity"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/ic_menu" />

            <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/comfortaa_medium"
                    android:paddingBottom="8dp"
                    android:text="Психологические тесты для одного"
                    android:textColor="@color/purpul"
                    android:textSize="16sp" />
        </LinearLayout>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="55dp"
                android:fontFamily="@font/comfortaa_medium"
                android:text="Скоро будут доступны психологические тесты для одного..."
                android:textColor="@android:color/white"
                android:textSize="20sp" />


        <TextView
                android:id="@+id/textViewInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/comfortaa_medium"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        <Button
                android:id="@+id/buttonOk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="75dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="75dp"
                android:layout_marginBottom="22dp"
                android:background="@drawable/btn_next"
                android:fontFamily="@font/yeseva_one_regular"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Буду ждать!"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="19sp" />


    </LinearLayout>

</LinearLayout>